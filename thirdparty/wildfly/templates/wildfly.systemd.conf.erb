<% config = scope.lookupvar('wildfly::mode') == 'domain'? "#{scope.lookupvar('wildfly::domain_config')} --host-config #{scope.lookupvar('wildfly::host_config')}" : scope.lookupvar('wildfly::config') %>

# The configuration you want to run
WILDFLY_CONFIG="'<%= config.to_s %> -P <%= scope.lookupvar('wildfly::dirname') %>/jboss.properties'"

# The mode you want to run
WILDFLY_MODE=<%= scope.lookupvar('wildfly::mode') %>

# Location of WildFly
WILDFLY_HOME="<%= scope.lookupvar('wildfly::dirname') %>"

# Location of JDK
JAVA_HOME=<%= scope.lookupvar('wildfly::java_home') %>
